{
  "compilerOptions": {
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": "./src",
    "jsx": "react",
    "jsxFactory": "h",
    "jsxFragmentFactory": "Fragment",
    "lib": ["es6", "dom"],
    "module": "es6",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "outDir": "./dist/",
    "paths": {
      "~types/*": ["types/*"],
      "~utils/*": ["components/utils/*"]
    },
    "resolveJsonModule": true,
    "sourceMap": true,
    "target": "es5",
    "types": ["jest"],
    "typeRoots": ["./typings", "./node_modules/@types"]
  },
  "exclude": ["./node_modules"]
}
